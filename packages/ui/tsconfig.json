{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "klarity/tsconfig/bundler/dom/library",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@repo/ui/*": ["./src/*"] }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
